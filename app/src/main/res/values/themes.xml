<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Massenger" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="android:colorEdgeEffect">@color/darkBlue</item>
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">@color/MainHeaderColor</item>
    </style>

    <style name="Theme.Massenger.Dark" parent="Theme.MaterialComponents.Light.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="Theme.AppCompat." parent="Theme.MaterialComponents.Light.NoActionBar">

    </style>

    <style name="Button.White" parent="ThemeOverlay.AppCompat">
        <item name="colorAccent">@android:color/holo_green_dark</item>
    </style>

    <style name="Theme.Massenger.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Theme.Massenger.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="Theme.Massenger.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />


    <declare-styleable name="ChristmasTree">
        <attr name="BaseLineLocationOn24" format="color" />
    </declare-styleable>

    <style name="LocationButtonUpdatedScene" parent="LocationButtonDefaultScene">
        <item name="BaseLineLocationOn24">#731B1B</item>
    </style>

    <style name="LocationButtonDefaultScene">
        <item name="BaseLineLocationOn24">#9A9A9A</item>
    </style>


    <!--designs login_bkogin and register-->
    <style name="parent" parent="AppWhiteTheme">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="loginParent" parent="parent">
        <item name="android:layout_height">match_parent</item>
        <item name="android:background">@color/loginBkColor</item>
        <item name="android:focusableInTouchMode">true</item>
    </style>

    <style name="headerText" parent="parent">
        <item name="android:textSize">@dimen/headerTextSize</item>
        <item name="android:textAlignment">center</item>
        <item name="android:textColor">@color/whiteTextColor</item>
        <item name="android:textStyle">bold</item>
    </style>


    <style name="loginCard" parent="parent"></style>

    <style name="linearParent" parent="parent">
        <item name="android:orientation">vertical</item>
    </style>


    <style name="viewParent">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>


    <style name="AppWhiteTheme">
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="loginHeader" parent="AppWhiteTheme">
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">@dimen/headerTextSize</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="modifiedEditText" parent="AppWhiteTheme">
        <item name="android:textSize">@dimen/newsMoreTextSize</item>
        <item name="android:backgroundTint">@color/primaryTextColor</item>
        <item name="android:layout_height">40sp</item>
        <item name="android:layout_width">match_parent</item>
    </style>

    <style name="loginButton" parent="viewParent">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@drawable/login_button_bk</item>
        <item name="android:textColor">@color/whiteTextColor</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="loginRedirectLink" parent="viewParent">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/primaryTextColor</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="massegeBoxStyle" parent="viewParent">
        <item name="android:textColor">@color/black</item>
        <item name="android:textStyle">bold</item>
    </style>


    <style name="style_MainPageHeader_dark">
        <item name="android:background">@color/MainHeaderColor</item>
    </style>

    <style name="style_MainPageHeader_dark_tabBar" parent="style_MainPageHeader_dark">
        <item name="android:textColor">@color/white</item>
        <item name="android:background">@color/MainHeaderColor</item>
    </style>

    <style name="AllContactHeaderSpecific">
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="AllSettingSpecific">
        <item name="android:textColor">@color/black</item>
        <item name="android:background">@color/white</item>
    </style>


    <style name="MainPageViewPager"></style>

    <style name="contactRowMain" parent="MainPageViewPager">
        <item name="android:textColor">@color/black</item>
        <item name="android:background">@color/transparent</item>
    </style>

    <style name="contactRowMainImageView" parent="contactRowMain">
        <!--        <item name="android:color">@color/red</item>-->
        <!--        <item name="android:background">@color/black</item>-->
    </style>

    <style name="massegeDesignUserRow">
        <item name="android:textColor">@color/black</item>
    </style>

</resources>